{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.inventario.app",
  "productName": "Inventario App",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist/frontend",
    "devUrl": "http://localhost:9002",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run compile:frontend"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Inventario App",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png",
      "../icons/icon.icns",
      "../icons/icon.ico"
    ],
    "resources": [
      "../dist/backend/**/*"
    ]
  },
  "plugins": {}
}